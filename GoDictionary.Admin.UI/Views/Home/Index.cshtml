@model GoDictionary.Admin.UI.Models.ViewModels.CurrentUserVM

<div class="col-md-3 col-sm-3 col-xs-12 profile_left">
    <h3>Yönetici Bilgileri</h3>

    <ul class="list-unstyled user_data">
        <li>
            <i class="fa fa-id-card user-profile-icon"></i> <b>Kullanıcı Adı: @Model.WebUserDTO.UserName</b>
        </li>

        <li>
            <i class="fa fa-user user-profile-icon"></i> <b>Ad: @Model.WebUserDTO.FirstName</b>
        </li>

        <li>
            <i class="fa fa-user user-profile-icon"></i> <b>Soyad: @Model.WebUserDTO.LastName</b>
        </li>

        <li>
            <i class="fa fa-envelope-o user-profile-icon"></i> <b>E-mail: @Model.WebUserDTO.Email</b>
        </li>

        <li>
            <i class="fa fa-unlock user-profile-icon"></i> <b>Üyelik tipi: @Model.WebUserDTO.Role</b>
        </li>

        <li>
            <i class="fa fa-calendar user-profile-icon"></i> <b>Üyelik Tarihi: @Model.WebUserDTO.MembershipDate.ToShortDateString()</b>
        </li>
    </ul>

    <a href="/webuser/edit/@Model.WebUserDTO.ID" class="btn btn-success"><i class="fa fa-edit m-right-xs"></i>Edit Profile</a>
    <br />

