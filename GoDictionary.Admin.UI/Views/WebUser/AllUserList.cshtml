
@{
    ViewBag.Title = "Tüm Üyelerin Listesi";
    Layout = "~/Views/Shared/_layout.cshtml";
}

@model List<GoDictionary.Admin.UI.Models.DataTransferObjects.WebUserDTO>
<p class="text-muted font-13 m-b-30">
    Yönetici ve yazar yetkisine sahip tüm üyeler.
</p>
<table id="datatable" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Kullanıcı Adı</th>
            <th>İsim</th>
            <th>Soy İsim</th>
            <th>E-mail</th>
            <th>Yetki Derecesi</th>
            <th>Üyelik Başlangıcı</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>@item.UserName</td>
                <td>@item.FirstName</td>
                <td>@item.LastName</td>
                <td>@item.Email</td>
                <td>@item.Role</td>
                <td>@item.MembershipDate.ToShortDateString()</td>
            </tr>
        }
    </tbody>
</table>

<script>
    $(document).ready(function () {
        $('datatable').DataTable();
    });
</script>

